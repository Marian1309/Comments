{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@fonts": ["./public/fonts"],
      "@icons": ["./public/icons"],
      "@types": ["./@types.ts"],
      "@/*": ["./app/*"],
      "@prisma": ["./prisma/client.ts"],
      "@globals": ["./styles/globals.scss"],
      "@components/*": ["./components/*"],
      "@api/*": ["./pages/api/*"],
      "@utils": ["./utils"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "prisma/client.ts",
    "app/layout.jsx"
  ],
  "exclude": ["node_modules"]
}
